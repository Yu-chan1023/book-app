<div class="search">
  <%= form_with(url: search_books_path, local: true, method: :get, class: "search__form") do |f| %>
    <%= f.text_field :keyword, placeholder: "タイトルを検索する", class: "search__form--input", id: "search__input" %>
    <%= f.submit "検索", class: "search__form--btn", id: "search__btn" %>
  <% end %>
</div>

<div class = "books">
  <% @books.each do |book| %>
    <%= render partial: "book", locals: { book: book } %>
  <% end %>
</div>
  